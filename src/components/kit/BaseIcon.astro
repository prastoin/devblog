---
import { Icon } from "astro-icon";
import { StandardSize } from "../../type";

export interface Props {
  name: string;
  size?: StandardSize;
}

function getIconWidth(iconSize: StandardSize = "xl") {
  const smallStyle = "w-4 lg:w-5";
  const mediumStyle = "w-7 lg:w-8";
  const extraLargeStyle = "w-8 lg:w-10";

  switch (iconSize) {
    case "s":
      return smallStyle;
    case "m":
      return mediumStyle;
    case "xl":
      return extraLargeStyle;
    default:
      console.error(`Encountered unknown iconSize value ${iconSize}`);
      return extraLargeStyle;
  }
}

const { name, size } = Astro.props;
const iconWidth = getIconWidth(size);
---

<Icon class={`${iconWidth} text-dark dark:text-white`} name={name} />
