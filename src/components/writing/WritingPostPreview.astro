---
import { PostPreviewInformation } from '../../pages/writing/PostsType';
import BaseSection from '../kit/BaseSection.astro';
export interface Props {
    postInformation: PostPreviewInformation;
}

const { postInformation: {description, name, publishDate, title, url} } = Astro.props;
---

<div>
    <hr />
    <BaseSection>
        <header>
            <a href={url}><h3 class="text-red-800">{title}</h3></a>
            <p>{publishDate}</p>
        </header>
        <p>
            {description}
        </p>
        <a href={url}>Read more</a>
    </BaseSection>
</div>
