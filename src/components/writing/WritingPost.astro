---
import BaseSection from '../kit/BaseSection.astro';
export interface Props {
    title: string;
    publishDate: string;
}

const { title, publishDate } = Astro.props;
---

<BaseSection>
    <article>
        <header class="mb-4 font-bold text-primary">
            <h3 class="mb-3 text-2xl md:text-3xl underline">
                {title}
            </h3>
            <span class="italic">{publishDate}</span>
        </header>

        <section
            class="prose dark:prose-invert prose-sm md:prose-base lg:prose-lg"
        >
            <slot />
        </section>
    </article>
</BaseSection>
