---
import BaseSection from '../kit/BaseSection.astro';
export interface Props {
    title: string;
    publishDate: string;
    writingArticleHtml: any;
}

const { title, publishDate, writingArticleHtml } = Astro.props;
---

<BaseSection>
    <article>
        <header class="prose dark:prose-invert">
            <h3 class="text-red-800">{title}</h3>
            <span>{publishDate}</span>
        </header>
        <Fragment set:html={writingArticleHtml} />
    </article>
</BaseSection>
