---

import { NoteFrontmatter } from "../types/NotesType";
import BaseHr from "./kit/BaseHr.astro";
import BaseProseSection from "./kit/BaseProseSection.astro";
import BaseSection from "./kit/BaseSection.astro"
export interface Props {
	postFrontmatter: NoteFrontmatter
    compiledContent: string
    noteIndex: number
}

const { noteIndex, compiledContent, postFrontmatter: { title, publishDate } } = Astro.props;
const showHrElement = noteIndex !== 0
---
<>
    {showHrElement && <BaseHr />}
    <BaseSection>
        <article>
            <header class="mb-4 font-bold text-primary">
                <h3 class="mb-3 text-2xl md:text-3xl underline">{title}</h3>
                <span class="italic">{publishDate}</span>
            </header>
    
            <BaseProseSection>
                <Fragment set:html={compiledContent} />
            </BaseProseSection>
        </article>
    </BaseSection>
</>
