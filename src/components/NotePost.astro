---

import { NoteFrontmatter } from "../pages/notes/NotesType";
import BaseSection from "./kit/BaseSection.astro"
export interface Props {
	postFrontmatter: NoteFrontmatter
    compiledContent: string
}

const { compiledContent, postFrontmatter: { title, publishDate } } = Astro.props;
---
<>
    <hr />
    <BaseSection>
        <article>
            <header class="prose dark:prose-invert">
                <h3 class="text-red-800">{title}</h3>
                <span>{publishDate}</span>
            </header>
            <Fragment set:html={compiledContent} />
        </article>
    </BaseSection>
</>
