---
import BaseHead from "../components/kit/BaseHead.astro";
import BaseBody from "../components/kit/BaseBody.astro";
import "../styles/global.css";
import WritingPost from "../components/writing/WritingPost.astro";
import type { CollectionEntry } from "astro:content";
import WritingPostPreview from "../components/writing/WritingPostPreview.astro";

interface Props {
  writingEntry: CollectionEntry<"writings">;
}

const { data: frontmatter, slug } = Astro.props.writingEntry;
const { description, title: writingTitle } = frontmatter;
const title = `Paul Rastoin | ${writingTitle}`;
const permalink = `https://paul.rastoin.dev/notes/${slug}/`;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
  </head>

  <BaseBody>
    <WritingPost frontmatter={frontmatter}>
      <slot />
    </WritingPost>
  </BaseBody>
</html>
