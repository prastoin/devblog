---
import BaseHead from '../components/kit/BaseHead.astro';
import BaseBody from '../components/kit/BaseBody.astro';
import '../styles/global.css';
import WritingPost from '../components/writing/WritingPost.astro';

const { title, description, publishDate, permalink } = Astro.props.content;
---

<html lang="en">
    <head>
        <BaseHead {title} {description} {permalink} />
    </head>

    <BaseBody>
        <WritingPost {title} {publishDate}>
            <slot />
        </WritingPost>
    </BaseBody>
</html>
