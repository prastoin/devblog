---
import BaseHead from "../components/kit/BaseHead.astro";
import BaseBody from "../components/kit/BaseBody.astro";
import "../styles/global.css";
import type { CollectionEntry } from "astro:content";
import NotePost from "../components/notes/NotePost.astro";

interface Props {
  noteEntry: CollectionEntry<"notes">;
}

const { data: frontmatter, slug } = Astro.props.noteEntry;
const { title: noteTitle } = frontmatter;
const title = `Paul Rastoin | ${noteTitle}`;
const description =
  "Things I've learned recently that I consider deserve to keep a trace of";
const permalink = `https://paul.rastoin.dev/notes/${slug}/`;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
  </head>

  <BaseBody>
    <NotePost frontmatter={frontmatter}>
      <slot />
    </NotePost>
  </BaseBody>
</html>
